/*Bing壁纸设置区域设置*/
.container{
  width: 100%;
  height: 400rpx;
  margin: 0;
  padding: 0;
  position: relative;
}
.container image{
  position: absolute;
  width: 100%;
  height: 450rpx;
}
.up{
  position: absolute;
  z-index: 1;
}
/*搜索框区域设置*/
.searchpage{
  width: 90%;
  height: 50rpx;
  margin: 0;
  padding: 160px;
  position: relative;
}
